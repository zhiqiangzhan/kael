<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs">
    <li class="active"><a href="#current" data-toggle="tab">基本信息</a></li>
    <li><a href="#strategies" data-toggle="tab">模板策略</a></li>
    <li><a href="#templates" data-toggle="tab">消息模板</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="current">
        <br />
        <div class="row box">
            <h2 class="title"><%= @message_config.name %></h2>
            <div class="col-xs-2">名称</div>
            <div class="col-xs-10"><%= @message_config.name %></div>
            <div class="col-xs-2">分组</div>
            <div class="col-xs-10"><%= @message_config.group %></div>
            <div class="col-xs-2">业务类型</div>
            <div class="col-xs-10"><%= @message_config.biz_type %></div>
            <div class="col-xs-2">描述</div>
            <div class="col-xs-10"><%= @message_config.desc %></div>
        </div>
    </div>
    <div class="tab-pane" id="strategies">
        <br />
        <div class="row box">
            <h2 class="title">
                模板策略管理
                <%= link_to '新建', new_message_config_template_strategy_path(@message_config), class: 'btn btn-primary btn-xs pull-right', data: {toggle: 'modal', target: '#globalModal'}  %>
            </h2>
            <%= render template: 'template_strategies/_table' %>
        </div>
    </div>
    <div class="tab-pane" id="templates">
        <br />
        <div class="row box">
            <h2 class="title">
                消息模板管理
                <%= link_to '新建', new_message_config_message_template_path(@message_config), class: 'btn btn-primary btn-xs pull-right', data: {toggle: 'modal', target: '#globalModal'}  %>
            </h2>
            <%= render template: 'message_templates/_table' %>
        </div>
    </div>
</div>


