<%= form_for(@message_config, remote: true, html:{class: 'form-horizontal'}) do |f| %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">消息配置</h4>
    </div>
    <div class="modal-body">
        <div class="field form-group">
            <%= f.label :group, class: 'control-label col-sm-3'%>
            <div class="col-sm-9">
                <%= f.text_field :group, class: 'form-control' %>
            </div>
        </div>
        <div class="field form-group">
            <%= f.label :biz_type, class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
                <%= f.text_field :biz_type, class: 'form-control' %>
            </div>
        </div>
        <div class="field form-group">
            <%= f.label :name, class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="field form-group">
            <%= f.label :desc, class: 'control-label col-sm-3' %>
            <div class="col-sm-9">
                <%= f.text_area :desc, class: 'form-control', rows: 8 %>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">保存</button>
    </div>
<% end %>