<%= form_for([@message_config, @message_template], html:{class: 'form-horizontal'}, remote: true) do |f| %>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">消息配置</h4>
</div>
<div class="modal-body">
    <div class="field form-group">
        <%= f.label :name, class: 'control-label col-sm-3' %>
        <div class="col-sm-9">
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>

    <div class="field form-group">
        <%= f.label :template, class: 'control-label col-sm-3' %>
        <div class="col-sm-9">
            <%= f.text_area :template, :rows => 8, class: 'form-control' %>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">保存</button>
</div>
<% end %>